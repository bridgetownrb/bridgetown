{
  "name": "<%= @site_name %>",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    <%- if frontend_bundling_option == "esbuild" -%>
    "esbuild": "node esbuild.config.js --minify",
    "esbuild-dev": "node esbuild.config.js --watch"
    <%- else -%>
    "webpack-build": "webpack --mode production",
    "webpack-dev": "webpack --mode development -w"
    <%- end -%>
  },
  "devDependencies": {
    <%- if frontend_bundling_option == "webpack" -%>
    "css-loader": "^4.3.0",
    <%- end -%>
    "esbuild": "^0.13.15",
    <%- if frontend_bundling_option == "webpack" -%>
    "esbuild-loader": "^2.16.0",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^1.3.1",
    <%- else -%>
    "glob": "^7.2.0",
    <%- end -%>
    <%- if postcss_option -%>
    "postcss": "^8.4.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    <%- if frontend_bundling_option == "esbuild" -%>
    "postcss-import": "^14.0.2",
    "postcss-load-config": "^3.1.0",
    <%- else -%>
    "postcss-loader": "^4.3.0",
    <%- end -%>
    "postcss-preset-env": "^7.0.1"<%= "," if frontend_bundling_option == "webpack"  %>
    <%- else -%>
    "sass": "^1.32.8",
    "sass-loader": "^8.0.2",
    <%- end -%>
    <%- if frontend_bundling_option == "webpack" -%>
    "webpack": "^5.39.1",
    "webpack-cli": "^4.7.2",
    "webpack-manifest-plugin": "^3.1.1",
    "webpack-merge": "^5.8.0"
    <%- end -%>
  }
}
